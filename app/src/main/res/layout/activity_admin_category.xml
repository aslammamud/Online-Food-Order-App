<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="101dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/chickenfry" />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/shorma" />

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sand" />

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/burger1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ricebowl" />


        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="101dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/kacchi" />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="90dp"
            android:layout_height="58dp"
            app:srcCompat="@drawable/pizza" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/beefsteak" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/noodles" />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pasta" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/frenchfry" />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="73dp"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/cocacola" />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />
</RelativeLayout>